<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center"> New Campground: </h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="campground[title]">Title:</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="campground[price]">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]"
                            aria-describedby="price-label" placeholder="0.00" required>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="campground[location]">Location:</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                </div>

                <input class="form-control mb-3" type="file" name="image" multiple>

                <!-- <div class="mb-3">
                    <label class="form-label" for="campground[image]">Image Url:</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="campground[description]">Description:</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
        </div>
    </div>
    </div>